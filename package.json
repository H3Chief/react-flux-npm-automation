{
  "name": "react-flux-npm-automation",
  "version": "0.9.0",
  "description": "Sample React/Flux seed for a large app, using npm to process development automation",
  "main": "index.js",
  "scripts": {
	"pretest": "npm run lint",
    "test": "mocha",
    "serve:dev": "http-server -p 8000 ./src/",
    "open:dev": "opener http://localhost:8000",
    "build:dev": "browserify ./src/index.jsx > ./src/bundle.js",
    "clean": "rm ./src/bundle.js",
    "lint": "eslint ./src --ext .js,.jsx",
    "watch:js": "watchify ./src/index.jsx -o ./src/bundle.js",
	"prewatch":"npm run watchify",
	"watch":"watch 'npm run test' ./src/ ./test/"
  },
  "browserify": {
    "transform": [
      "babelify"
    ]
  },
  "keywords": [
    "npm-scripts",
    "flux",
    "react",
    "relay",
    "react-native",
    "cordova"
  ],
  "author": "Brian Vanderbusch <brian@normalgravity.com> (https://github.com/LongLiveCHIEF)",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/LongLiveCHIEF/react-flux-npm-automation.git"
  },
  "bugs": {
    "url": "https://github.com/LongLiveCHIEF/react-flux-npm-automation/issues"
  },
  "homepage": "https://github.com/LongLiveCHIEF/react-flux-npm-automation#readme",
  "dependencies": {
    "react": "^0.13.2",
    "watch": "^0.16.0"
  },
  "devDependencies": {
    "babel-eslint": "^3.1.1",
    "babelify": "^6.0.2",
    "browserify": "^10.1.2",
    "chai": "^2.3.0",
    "eslint": "^0.20.0",
    "http-server": "^0.8.0",
    "jsdom": "^5.3.0",
    "mocha": "2.0.1",
    "mocha-jsdom": "^0.3.0",
    "opener": "^1.4.1",
    "react-tools": "^0.13.2",
    "watchify": "^3.2.1"
  }
}
