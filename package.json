{
  "name": "react-flux-npm-automation",
  "version": "0.5.0",
  "description": "Sample React/Flux seed for a large app, using npm to process development automation",
  "main": "index.js",
  "scripts": {
    "pretest": "npm run lint",
    "test": "mocha ./test/**/*-spec.*",
    "prebuild": "npm run test && npm run clean",
    "build": "npm run build:js & npm run build:html",
    "build:js": "browserify ./src/client/index.jsx > ./build/bundle.js",
    "build:html": "cp ./src/client/index.html ./build/index.html",
    "clean": "rm -rf ./build/*",
	"livereload":"livereload ./build",
    "lint": "eslint ./src --ext .js,.jsx",
    "watch:js": "watchify ./src/client/index.jsx -o ./build/bundle.js",
    "watch": "npm run watch:js",
    "prestart": "npm run build",
    "start": "npm run watch & npm run livereload & nodemon server.js -w ./src/server"
  },
  "browserify": {
    "transform": [
      "babelify"
    ]
  },
  "keywords": [
    "npm-scripts",
    "flux",
    "react",
    "relay",
    "react-native",
    "cordova"
  ],
  "author": "Brian Vanderbusch <brian@normalgravity.com> (https://github.com/LongLiveCHIEF)",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/LongLiveCHIEF/react-flux-npm-automation.git"
  },
  "bugs": {
    "url": "https://github.com/LongLiveCHIEF/react-flux-npm-automation/issues"
  },
  "homepage": "https://github.com/LongLiveCHIEF/react-flux-npm-automation#readme",
  "dependencies": {
    "babelify": "^6.0.2",
    "livereload-js": "^2.2.2",
    "react": "^0.13.2"
  },
  "devDependencies": {
    "babel-eslint": "^3.1.1",
    "body-parser": "^1.12.4",
    "browserify": "^10.1.2",
    "chai": "^2.3.0",
    "chai-as-promised": "^5.0.0",
    "chai-jq": "0.0.8",
    "domino": "^1.0.18",
    "errorhandler": "^1.3.5",
    "eslint": "^0.20.0",
    "express": "^4.12.3",
    "forever": "^0.14.1",
    "livereload": "^0.3.7",
    "method-override": "^2.3.3",
    "mocha": "2.0.1",
    "opener": "^1.4.1",
    "react-tools": "^0.13.2",
    "sinon": "^1.14.1",
    "sinon-chai": "^2.7.0",
    "watchify": "^3.2.1",
    "zepto-node": "^1.0.0"
  },
  "engines": {
    "node": "~0.12.0"
  }
}
